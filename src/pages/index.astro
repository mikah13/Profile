		<Card class='col-span-1 md:col-span-2 md:row-span-1 dark:hover:border-orange-600'>
			<h2 class='text-xl font-bold m-0'>Tech stacks</h2>
		</Card>
		<Card class='col-span-1 md:col-span-1 md:row-span-1 dark:hover:border-yellow-600'>test</Card>
		<Card class='col-span-1 md:col-span-1 md:row-span-1 dark:hover:border-pink-600'>test</Card>
		<Card class='col-span-1 md:col-span-1 md:row-span-1 dark:hover:border-slate-600'>test</Card>
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
